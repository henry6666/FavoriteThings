<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.henry.favoritethings.DetailInformationActivity">


    <ImageView
        android:id="@+id/informationImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:src="@drawable/panda"
        android:scaleType="centerCrop"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/animalheadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:paddingTop="150dp"
        android:textColor="@android:color/background_light"
        android:text="Red Panda"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/animalheadline"
        android:layout_margin="16dp"
        android:text="Red panda är en björn."
        android:textSize="16dp" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#d56723"
        android:textSize="24dp" />


</RelativeLayout>
